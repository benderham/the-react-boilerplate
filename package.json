{
  "name": "the-react-boilerplate",
  "version": "1.1.0",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register test/**/*.js",
    "postinstall": "node node_modules/bower/bin/bower install",
    "start": "npm test && gulp"
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js"
  },
  "browserify-shim": {
    "jquery": "$"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "babel-core": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babelify": "*",
    "bower": "*",
    "browser-sync": "*",
    "browserify": "*",
    "browserify-shim": "*",
    "chai": "*",
    "gulp": "*",
    "gulp-autoprefixer": "*",
    "gulp-cssnano": "*",
    "gulp-group-css-media-queries": "*",
    "gulp-imagemin": "*",
    "gulp-jade": "*",
    "gulp-modernizr": "*",
    "gulp-notify": "*",
    "gulp-plumber": "*",
    "gulp-pug": "*",
    "gulp-sass": "*",
    "gulp-size": "*",
    "gulp-sourcemaps": "*",
    "gulp-svg-sprite": "*",
    "gulp-uglify": "*",
    "gulp-util": "*",
    "imagemin-pngquant": "*",
    "mocha": "*",
    "pretty-hrtime": "*",
    "react": "*",
    "react-addons-test-utils": "*",
    "react-dom": "*",
    "reflux": "*",
    "require-dir": "*",
    "run-sequence": "*",
    "whatwg-fetch": "*",
    "vinyl-source-stream": "*"
  }
}
